<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTodoListFragment">

    <TextView
        android:id="@+id/todolist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="10dp"
        android:text="Todolist Title"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/todolist_desc"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/todolist_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="6dp"
        android:text="A Todolist description"
        android:textColor="@color/gray_text"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/todolist_incomplete"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/todolist_incomplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:text="Incomplete Tasks: "
        android:textColor="@color/gray_text"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/whiteRectangle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/todolist_incomplete_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="2"
        android:textColor="@color/gray_text"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/whiteRectangle"
        app:layout_constraintStart_toEndOf="@+id/todolist_incomplete" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/whiteRectangle"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@drawable/white_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_sections"
            android:layout_width="370dp"
            android:layout_height="520dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:elevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text"></androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:text="Sections"
            android:textColor="@color/primary_blue"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>